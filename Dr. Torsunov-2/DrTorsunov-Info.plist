<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- BASE_URL уже есть и остаётся как был -->
    <key>BASE_URL</key>
    <string>$(BASE_URL)</string>

    <!-- Новый base для чата (RAG) -->
    <key>RAG_BASE_URL</key>
    <string>$(RAG_BASE_URL)</string>

    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>myrevive</string>
            </array>
        </dict>
    </array>

    <key>DEMO_PASSWORD</key>
    <string>demo1234</string>

    <key>LSApplicationQueriesSchemes</key>
    <array>
        <string>myrevive</string>
        <string>revive</string>
        <string>otherappscheme</string>
    </array>

    <!-- Фоновые режимы -->
    <key>UIBackgroundModes</key>
    <array>
        <string>bluetooth-central</string>
        <string>remote-notification</string>
    </array>

    <!-- Уведомления -->
    <key>NSUserNotificationUsageDescription</key>
    <string>Мы отправляем уведомления о событиях и напоминаниях.</string>

    <!-- ATS: разрешаем доступ к доменам веб/чат-сервера -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
        <key>NSExceptionDomains</key>
        <dict>
            <key>rag.dev.myrevive.app</key>
            <dict>
                <key>NSIncludesSubdomains</key><true/>
                <key>NSTemporaryExceptionAllowsInsecureHTTPLoads</key><false/>
                <key>NSExceptionRequiresForwardSecrecy</key><true/>
            </dict>
            <key>rag.myrevive.app</key>
            <dict>
                <key>NSIncludesSubdomains</key><true/>
                <key>NSTemporaryExceptionAllowsInsecureHTTPLoads</key><false/>
                <key>NSExceptionRequiresForwardSecrecy</key><true/>
            </dict>
        </dict>
    </dict>
</dict>
</plist>
